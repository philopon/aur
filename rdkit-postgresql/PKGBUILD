pkgname=rdkit-postgresql
_pkgname=RDKit
pkgver=2015_09_2
pkgrel=0
pkgdesc="RDKit - A collection of cheminformatics and machine-learning software written in C++ and Python."
arch=("i686" "x86_64")
url="http://rdkit.org/"
license=('New BSD License')
depends=( 'rdkit-python' )
source=("https://github.com/rdkit/rdkit/archive/Release_${pkgver}.tar.gz" Makefile.patch)
md5sums=('889fc8bda9d59ce3b72bf6252c630287' SKIP)
provides=('rdkit-postgresql')
srcpath=/rdkit-Release_${pkgver}/Code/PgSQL/rdkit

prepare() {
    cd $srcdir/$srcpath
    patch -i $srcdir/Makefile.patch
}

build() {
    cd $srcdir/$srcpath
    make USE_THREADS=1
}

package() {
    cd $srcdir/$srcpath
    make DESTDIR=${pkgdir} install
}

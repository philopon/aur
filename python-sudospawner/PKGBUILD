_name=sudospawner
pkgname=python-$_name
pkgver=0.2.0
pkgrel=0
pkgdesc="Spawn JupyterHub single-user servers with sudo"
arch=("any")
url="https://github.com/jupyterhub/sudospawner"
license=("BSD3")
depends=("python" "python-tornado" "jupyterhub" "jupyter-notebook")
source=("https://github.com/jupyterhub/sudospawner/archive/0.2.0.tar.gz")
sha256sums=("98602b88197e1eefcb03324efe3b1f2814d31d0cc646f1fd6f7067ca08565f07")

build() {
    cd $srcdir/$_name-$pkgver
    python setup.py build
}

package() {
    cd $srcdir/$_name-$pkgver
    python setup.py install --prefix=$pkgdir/usr
}
